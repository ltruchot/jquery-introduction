import './styles.scss'; // entry point for styles
import $ from 'jquery';

$('button').on('click', function () {
  const rid1 = $('.rideau:nth-child(1)');
  const rid2 = $('.rideau:nth-child(2)');
  const leftRid1 = parseInt(rid1.css('left'), 10);
  rid1.animate({
    left: leftRid1 === 0 ? '-390px' : '0',
  }, 5000);
  rid2.animate({
    left: leftRid1 === 0 ? '790px' : '400px',
  }, 5000);
});
